{
  "name": "@g1-studio/api-framework",
  "version": "1.1.3",
  "description": "G1 Studio API Framework - A high-performance, enterprise TypeScript API framework monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-package"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "dev": "bun run --filter='@g-1/core' dev",
    "test": "bun run --filter='*' test",
    "test:ci": "bun run --filter='*' test --run",
    "test:dashboard": "bun run --filter='@g-1/core' test:dashboard",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "bun run --filter='*' typecheck",
    "clean": "bun run --filter='*' clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish",
    "new-branch": "./scripts/new-branch.sh"
  },
  "keywords": [
    "api-framework",
    "typescript",
    "hono",
    "cloudflare-workers",
    "monorepo",
    "enterprise",
    "g1-studio"
  ],
  "author": "G1 Studio",
  "license": "MIT",
  "homepage": "https://github.com/g1-studio/api-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1-studio/api-framework.git"
  },
  "bugs": {
    "url": "https://github.com/g1-studio/api-framework/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@changesets/cli": "^2.27.9",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "bun@1.1.38"
}