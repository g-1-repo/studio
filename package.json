{
  "name": "@g1-studio/api-framework",
  "version": "1.0.0",
  "description": "G1 Studio API Framework - A high-performance, enterprise TypeScript API framework monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-package"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace=@g-1/core",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "setup": "npm install && npm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "npm run build && npm run changeset:version && npm run changeset:publish"
  },
  "keywords": [
    "api-framework",
    "typescript",
    "hono",
    "cloudflare-workers",
    "monorepo",
    "enterprise",
    "g1-studio"
  ],
  "author": "G1 Studio",
  "license": "MIT",
  "homepage": "https://github.com/g1-studio/api-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1-studio/api-framework.git"
  },
  "bugs": {
    "url": "https://github.com/g1-studio/api-framework/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "npm@10.0.0"
}