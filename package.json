{
  "name": "@g1-studio/api-framework",
  "version": "1.0.0",
  "description": "G1 Studio API Framework - A high-performance, enterprise TypeScript API framework monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "test-package"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "dev": "bun run --filter='@g-1/core' dev",
    "test": "bun run --filter='*' test",
    "lint": "bun run --filter='*' lint",
    "lint:fix": "bun run --filter='*' lint:fix",
    "typecheck": "bun run --filter='*' typecheck",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "setup": "bun install && bun run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun run build && bun run changeset:version && bun run changeset:publish"
  },
  "keywords": [
    "api-framework",
    "typescript",
    "hono",
    "cloudflare-workers",
    "monorepo",
    "enterprise",
    "g1-studio"
  ],
  "author": "G1 Studio",
  "license": "MIT",
  "homepage": "https://github.com/g1-studio/api-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1-studio/api-framework.git"
  },
  "bugs": {
    "url": "https://github.com/g1-studio/api-framework/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "bun@1.1.38"
}