{
  "name": "@g-1/core",
  "type": "module",
  "version": "1.15.8",
  "description": "The G1 Studio API Core. A high-performance, enterprise, typescript API framework built for maximum scale and security. Powered by Hono, Cloudflare workers, D1, Drizzle, and Better-Auth.",
  "author": "G1 Studio",
  "license": "MIT",
  "homepage": "https://github.com/g1-studio/g1-studio",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1-studio/g1-studio.git",
    "directory": "packages/core"
  },
  "keywords": [
    "hono",
    "cloudflare",
    "d1",
    "better-auth",
    "api",
    "boilerplate",
    "core",
    "serverless",
    "disruptive",
    "g1",
    "g-1"
  ],
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "wrangler d1 migrations apply DB --remote",
    "db:studio": " drizzle-kit studio",
    "auth:generate": "bunx @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "bun run lint:fix src/db/auth.schema.ts",
    "auth:update": "bun run auth:generate && bun run auth:format",
    "lint": "eslint .",
    "lint:fix": "bun run lint --fix",
    "test": "/Users/johnnymathis/Developer/g1/test/dist/cli/test-runner.js --runtime bun",
    "test:ci": "/Users/johnnymathis/Developer/g1/test/dist/cli/test-runner.js --runtime bun --silent --bail",
    "typecheck": "tsc --noEmit",
    "setup": "node scripts/setup-boilerplate.js",
    "release": "bunx @g-1/workflow release",
    "feature": "bunx @g-1/workflow feature",
    "workflow:status": "bunx @g-1/workflow status",
    "demo": "bun scripts/demo.ts",
    "rate-limit": "bun scripts/rate-limit-manager.ts",
    "fix-rate-limit": "./scripts/fix-rate-limit.sh",
    "test-auth-endpoints": "bun scripts/test-auth-endpoints.ts",
    "fix-auth-docs": "bun scripts/fix-auth-docs.ts",
    "git-status": "bun scripts/git-utils.ts",
    "dev:unlimited": "NODE_ENV=development bun run dev",
    "warp:enhance": "g1-warp enhance",
    "warp:status": "g1-warp status",
    "warp:typecheck": "g1-warp typecheck"
  },
  "dependencies": {
    "@g-1/util": "workspace:*",
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@hono/zod-openapi": "^1.1.4",
    "@paralleldrive/cuid2": "^3.1.0",
    "@scalar/hono-api-reference": "^0.9.22",
    "better-auth": "^1.3.28",
    "better-auth-cloudflare": "^0.2.7",
    "dayjs": "^1.11.18",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.1",
    "hono-pino": "^0.10.3",
    "pino": "^10.1.0",
    "resend": "^6.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@cloudflare/vitest-pool-workers": "^0.9.14",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@g-1/workflow": "^2.19.6",
    "@hono/node-server": "^1.19.5",
    "@react-email/render": "^1.4.0",
    "@types/node": "^24.8.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-plugin-format": "^1.0.2",
    "hono-rate-limiter": "^0.4.2",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "vitest": "~3.2.4",
    "wrangler": "4.43.0"
  }
}
