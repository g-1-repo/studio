{
  "name": "@g-1/cli",
  "type": "module",
  "version": "2.0.0",
  "packageManager": "bun@1.1.38",
  "description": "G1 API Framework CLI for project scaffolding and management",
  "author": "G1 Studio",
  "license": "MIT",
  "homepage": "https://github.com/g1-studio/api-framework#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/g1-studio/api-framework.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/g1-studio/api-framework/issues"
  },
  "keywords": [
    "g1",
    "api",
    "framework",
    "cli",
    "scaffolding",
    "generator",
    "boilerplate"
  ],
  "main": "dist/index.js",
  "bin": {
    "g1": "dist/cli.js",
    "g1-cli": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest --no-watch",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "dependencies": {
    "@g-1/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "mustache": "^4.2.0",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.8.0",
    "@types/semver": "^7.5.4",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  }
}
